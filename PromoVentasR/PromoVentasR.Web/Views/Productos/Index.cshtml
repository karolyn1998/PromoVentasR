@model List <PromoVentas.BL.Producto>
@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>



 <table class="table table-bordered  table-hover">
     <thead>
         <tr>
            <th>
                Codigo
            </th>
             <th>
                 Descripcion
             </th>
             <th>
                 Precio
             </th>
         </tr>
     </thead>
         @foreach (var Producto in Model)
         {
             <tr>
                 <td>@Producto.Id</td>
                 <td>@Producto.Descripcion</td>
                 <td>@Producto.Precio</td>

             </tr>
         }
</table>
